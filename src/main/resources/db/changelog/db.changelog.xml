<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

        <changeSet id="01-create-students-table" author="Petri Kainulainen">
        <createTable tableName="offer">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="group_id" type="VARCHAR(20)"/>
            <column name="offer_id" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT"/>
            <column name="currency_id" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="FLOAT">
                <constraints nullable="false"/>
            </column>
            <column name="decription" type="CLOB"/>

            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
            <createTable tableName="picture">
                <column name="id" type="BIGINT">
                    <constraints primaryKey="true"/>
                </column>
                <column name="offer_id" type="VARCHAR(20)">
                    <constraints nullable="false"/>
                </column>
                <column name="url" type="VARCHAR(200)">
                    <constraints nullable="false"/>
                </column>
            </createTable>
            <createTable tableName="param">
                <column name="id" type="BIGINT">
                    <constraints primaryKey="true"/>
                </column>
                <column name="offer_id" type="VARCHAR(20)">
                    <constraints nullable="false"/>
                </column>
                <column name="value" type="VARCHAR(200)">
                    <constraints nullable="false"/>
                </column>
                <column name="name" type="VARCHAR(30)">
                    <constraints nullable="false"/>
                </column>
            </createTable>
            <addForeignKeyConstraint baseTableName="picture"
                                     baseColumnNames="offer_id"
                                     constraintName="offer_fk"
                                     referencedTableName="offer"
                                     referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>